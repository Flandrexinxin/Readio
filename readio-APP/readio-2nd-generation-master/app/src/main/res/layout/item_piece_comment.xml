<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment_user_avator"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/xiaoyang"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/commentLinearlayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/comment_user_avator"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/comment_user_avator"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/commentUserText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="呆头鹅"
                android:textColor="#454545"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/comment_to_userText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#A6A6A6"
                android:textSize="10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/commentContentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="好棒棒哦，呆头鹅好喜欢!好棒棒哦，呆头鹅好喜欢!好棒棒哦，呆头鹅好喜欢!好棒棒哦，呆头鹅好喜欢!好棒棒哦，呆头鹅好喜欢!好棒棒哦，呆头鹅好喜欢!好棒棒哦，呆头鹅好喜欢!好棒棒哦，呆头鹅好喜欢!好棒棒哦，呆头鹅好喜欢!好棒棒哦，呆头鹅好喜欢!好棒棒哦，呆头鹅好喜欢!好棒棒哦，呆头鹅好喜欢!好棒棒哦，呆头鹅好喜欢!" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/commentTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02-10 22:56"
                android:textColor="#A6A6A6"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!--                <ImageView-->
                <!--                    android:layout_marginLeft="5dp"-->
                <!--                    android:textAlignment="viewEnd"-->
                <!--                    android:id="@+id/delete_comment_btn"-->
                <!--                    android:layout_width="20dp"-->
                <!--                    android:layout_height="20dp"-->
                <!--                    android:src="@drawable/trush_bin"/>-->

                <TextView
                    android:id="@+id/delete_comment_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp"
                    android:text="删除"
                    android:textColor="@color/blue"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/reply_send_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/another_comment"
                    android:textAlignment="viewEnd" />

                <ImageView
                    android:id="@+id/likePieceCommentButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/likecomment"
                    android:textAlignment="viewEnd" />

                <TextView
                    android:id="@+id/likePieceCommentNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="162" />


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
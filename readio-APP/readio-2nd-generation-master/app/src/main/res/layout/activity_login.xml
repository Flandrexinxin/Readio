<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_activity_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/read2"
    tools:context=".ui.userpage.login.LoginActivity">

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:blurOverlayColor="#14000000">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/main_title"
                layout="@layout/register_title_layout" />

            <LinearLayout
                android:id="@+id/title_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_title"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#55ffffff"
                    android:elevation="0dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp">

                        <ImageView
                            android:layout_width="70dip"
                            android:layout_height="70dip"
                            android:backgroundTint="#00ffffff"
                            android:src="@drawable/catdog1" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:fontFamily="@font/kalam_regular"
                    android:gravity="center"
                    android:text="Readio"
                    android:textColor="#ffffff"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="READ AND WRITE"
                    android:textColor="#83FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/login_register_form_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/title_linearlayout"
                android:layout_marginTop="50dp">


            </androidx.constraintlayout.widget.ConstraintLayout>


        </RelativeLayout>

    </eightbitlab.com.blurview.BlurView>
</RelativeLayout>